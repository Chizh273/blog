RewriteEngine on
RewriteBase /

RewriteRule ^([a-zA-Z]+)$ index.php?ctrl=$1 [QSA]
RewriteRule ^([a-zA-Z]+)\/([0-9]+)$ index.php?ctrl=$1&id=$2 [QSA]
RewriteRule ^([a-zA-Z]+)\/([a-zA-Z]+)$ index.php?ctrl=$1&action=$2 [QSA]
RewriteRule ^([a-zA-Z]+)\/([a-zA-Z]+)\/([0-9]+)$ index.php?ctrl=$1&action=$2&id=$3 [QSA]
